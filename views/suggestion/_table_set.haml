- suggestion_sets.each do |suggestion_set|
  .clear
  = suggestion_set_hr(suggestion_set)
  .suggestions
    %table.sortable.zebra-striped
      %thead
        %tr
          %th.header Title
          %th.header User
          %th.header When
      %tbody
        - suggestions = suggestion_set.suggestions
        - suggestions.each do |suggestion|
          %tr
            = haml :'suggestion/_table_row', :locals => {suggestion: suggestion}
    .footer="#{suggestions.count} Title Suggestion#{suggestions.count == 1 ? '' : 's'}"
