-if @suggestions.count > 0
  %h2.subtitle.grid_12="Title suggestions in the last 24 hours"
  %hr
  .clear
  %ol#titles
    - col = 0
    -@suggestions.each do |suggestion|
      %li.suggestion.grid_4
        .qstart “
        .title="#{suggestion.title}"
        .qend ”
        .user=suggestion.user
        %abbr.timeago{:title => suggestion.time.getutc.iso8601}= suggestion.time.strftime("%-m/%-d/%Y at %-I:%M%P %Z")
        .show=suggestion.show
        %span.arrow
      -if col >= 2
        .clear
        -col = 0
        -else
        -col+=1
  .clear
-else
  %h2.subtitle.grid_12 No title suggestions yet...
